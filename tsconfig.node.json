{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "types": ["node"]
  },
  "include": [
    "bin/**/*.js",
    "bin/**/*.ts",
    "maintenance/**/*.js",
    "maintenance/**/*.ts",
    "tools/**/*.js",
    "tools/**/*.ts",
    "tests/run-ava.ts",
    "types/**/*.d.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "types/frontend/**/*"
  ]
}
