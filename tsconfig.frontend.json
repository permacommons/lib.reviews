{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["jquery"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": [
    "frontend/**/*.js",
    "frontend/**/*.ts",
    "types/frontend/**/*.d.ts"
  ]
}
