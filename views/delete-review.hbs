{{#each pageErrors}}
  <div class="error">{{{this}}}</div>
{{/each}}
<div class="warning-box">
  <div class="delete-preamble">
  {{{__ "delete preamble"}}}
  </div>
  <form class="pure-form pure-form-aligned" method="post">
  {{#if review.thing.userCanDelete}}
  <input type="checkbox" name="delete-thing" id="delete-thing">
  <label for="delete-thing" class="inline-label">{{{__ "also delete thing" review.thing.id}}}</label><p>
  {{/if}}
  <input type="hidden" value="{{csrfToken}}" name="_csrf">
  <button type="submit" id="delete" name="delete-action" value="delete" class="pure-button button-destructive button-rounded" accesskey="d" title="{{{__ "accesskey" "d"}}}"><span class="fa fa-fw fa-trash spaced-icon">&nbsp;</span> {{{__ "delete"}}}</button>
  <a class="cancel-link" href="/review/{{review.id}}">{{{__ "cancel"}}}</a>
  </form>
</div>
<div class="review">
{{> review hideDeleteControls=true review=review}}
</div>
