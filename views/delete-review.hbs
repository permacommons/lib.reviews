{{#each pageErrors}}
  <div class="error">{{{this}}}</div>
{{/each}}
<div class="warning-box">
  <div class="delete-preamble">
  {{{__ "delete preamble"}}}
  </div>
  <form method="post">
  {{#if review.thing.userCanDelete}}
  {{#ifCond thingReviewCount "===" 1}}
  <label for="delete-thing">
  <input type="checkbox" name="delete-thing" id="delete-thing">
  {{{__ "also delete thing" review.thing.id}}}
  </label>
  <p>
  {{/ifCond}}
  {{/if}}
  <input type="hidden" value="{{csrfToken}}" name="_csrf">
  <button type="submit" id="delete" name="delete-action" value="delete" class="message-button-destructive" accesskey="d" title="{{{__ "accesskey" "d"}}}"><span class="fa fa-fw fa-trash spaced-icon"></span> {{{__ "delete"}}}</button>
  <a class="cancel-link" href="/review/{{review.id}}">{{{__ "cancel"}}}</a>
  </form>
</div>
<div class="review">
{{> review hideDeleteControls=true review=review}}
</div>
