{{#if requestComplete}}
  <p>{{{__ "forgot password request confirmation" requestedEmail}}}</p>
{{else}}
  <p>{{{__ "forgot password intro"}}}</p>
{{/if}}
<p>{{{__ "forgot password details" cooldownHours}}}</p>
{{#unless requestComplete}}
  {{> page_errors}}

  <form class="pure-form pure-form-aligned" action="/forgot-password" method="post">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <fieldset>
      <div class="pure-control-group">
        <label for="email">{{{__ "email address"}}} <span class="required">*</span></label>
        <input
          id="email"
          name="email"
          type="email"
          data-auto-trim
          data-required
          data-focus
          placeholder="{{{__ "enter email"}}}"
          class="pure-input-1 login-form-input">
      </div>

      <div class="validation-error" id="required-fields-message">
        {{{__ "complete all required fields"}}}
      </div>

      <button type="submit" data-check-required class="pure-button pure-button-primary button-rounded">
        {{{__ "send reset link"}}}
      </button>

      <p>{{{__ "remember password" }}}</p>
    </fieldset>
  </form>
{{/unless}}
