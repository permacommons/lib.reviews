<h2>{{{__ "team title" (mlSafeText team.name false)}}}</h2>
{{>page_errors}}
{{#if isPreview}}
<div id="preview-contents">
<h2 id="preview-header">{{{__ "preview title"}}}</h2>
<h3>{{mlSafeText formValues.title false}}</h3>
{{{mlHTML formValues.html}}}
<div id="preview-blog-post-byline">{{{__ "byline" (userLink formValues.creator) (longDate formValues.createdOn)}}}</div>
</div>
{{/if}}
<form id="blog-post-form" name="blog-post-form" method="post">
<input type="hidden" value="{{csrfToken}}" name="_csrf">
<fieldset>
  <div class="grid grid-form">
    <div>
      <label for="post-title">{{{__ "blog post title"}}} <span class="required">*</span></label>
      <input id="post-title" name="post-title" type="text" data-required data-focus placeholder="{{{__ "enter blog post title"}}}" value="{{mlSafeText formValues.title false}}">
    </div>
    <div>
      {{>help input="post-title" helpLabel="blog post title help label" helpText="blog post title help"}}
    </div>

    <div>
      <label for="post-text">{{{__ "blog post text"}}} <span class="required">*</span></label>
      <textarea id="post-text" name="post-text" class="blog-post-textarea" data-markdown data-required placeholder="{{{__ "enter blog post"}}}">{{mlSafeText formValues.text false}}</textarea>
      {{>editor_switcher}}
    </div>
    <div>
      {{>help input="post-text" helpLabel="blog post text" helpText="blog post text help"}}
    </div>
  </div>

  <input id="post-language" name="post-language" type="hidden" value="{{currentLanguage.langKey}}">
</fieldset>
<div class="validation-error" id="required-fields-message">
  {{{__ "complete all required fields"}}}
</div>
<div class="validation-error" id="form-error-message">
  {{{__ "correct errors"}}}
</div>
<div class="buttons-group">
  <button type="submit" id="save" name="post-action" value="publish" data-check-required accesskey="s" title="{{{__ "accesskey" "s"}}}">{{#if editing}}{{{__ "save"}}}{{else}}{{{__ "publish"}}}{{/if}}</button>
  <button type="submit" id="preview" name="post-action" value="preview" class="secondary" accesskey="p" title="{{{__ "accesskey" "p"}}}">{{{__ "preview"}}}</button>
</div>
</form>
