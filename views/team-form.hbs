{{>page_errors}}

{{#if isPreview}}
<div id="preview-contents">
<h2 id="preview-header">{{{__ "preview title"}}}</h2>
<h3 class="team-header">{{mlSafeText formValues.name false}}</h3>
<span class="team-motto">{{mlSafeText formValues.motto false}}</span>
<div class="team-description">
{{{mlHTML formValues.description.html}}}
</div>
{{#if (mlHTML formValues.rules.html)}}
<b>{{{__ "team rules label"}}}</b>
<div class="team-rules">
{{{mlHTML formValues.rules.html}}}
</div>
{{/if}}
</div>
{{/if}}

<p>{{{__ "start team preamble"}}}
</p>
<form id="team-form" name="team-form" method="post">
<input type="hidden" value="{{csrfToken}}" name="_csrf">
<fieldset>
  <div class="grid grid-form">
    <div>
      <label for="team-name">{{{__ "team name"}}} <span class="required">*</span></label>
      <input id="team-name" name="team-name" type="text" data-required data-focus placeholder="{{{__ "enter team name"}}}" value="{{mlSafeText formValues.name false}}">
    </div>
    <div>
      {{>help input="team-name" helpLabel="team name" helpText="team name help"}}
    </div>

    <div>
      <label for="team-motto">{{{__ "team motto"}}} <span class="required">*</span></label>
      <input id="team-motto" name="team-motto" type="text" data-required placeholder="{{{__ "enter team motto"}}}" value="{{mlSafeText formValues.motto false}}">
    </div>
    <div>
      {{>help input="team-motto" helpLabel="team motto" helpText="team motto help"}}
    </div>

    <div>
      <label for="team-description">{{{__ "team description"}}} <span class="required">*</span></label>
      <textarea id="team-description" name="team-description" class="team-textarea" data-required data-markdown placeholder="{{{__ "enter team description"}}}">{{mlSafeText formValues.description.text false}}</textarea>
      {{>editor_switcher}}
    </div>
    <div>
      {{>help input="team-description" helpLabel="team description help label" helpText="team description help"}}
    </div>

    <div>
      <label for="team-rules">{{{__ "team rules"}}}</label>
      <textarea id="team-rules" name="team-rules" class="team-textarea" data-markdown placeholder="{{{__ "enter team rules"}}}">{{mlSafeText formValues.rules.text false}}</textarea>
      {{>editor_switcher noaccesskeys=true}}
    </div>
    <div>
      {{>help input="team-rules" helpLabel="team rules help label" helpText="team rules help"}}
    </div>
  </div>

  <div class="form-section">
    <label for="team-mod-approval-to-join">
      <input id="team-mod-approval-to-join" name="team-mod-approval-to-join" type="checkbox" {{#if formValues.modApprovalToJoin}}checked{{/if}}>
      {{{__ "mod approval to join"}}}
    </label>
    <label for="team-only-mods-can-blog">
      <input id="team-only-mods-can-blog" name="team-only-mods-can-blog" type="checkbox" {{#if formValues.onlyModsCanBlog}}checked{{/if}}>
      {{{__ "only mods can blog"}}}
    </label>
    <input id="team-language" name="team-language" type="hidden" value="{{currentLanguage.langKey}}">
  </div>
</fieldset>
<div class="validation-error" id="required-fields-message">
  {{{__ "complete all required fields"}}}
</div>
<div class="validation-error" id="form-error-message">
  {{{__ "correct errors"}}}
</div>
<div class="buttons-group">
  <button type="submit" id="save" name="team-action" value="publish" data-check-required accesskey="s" title="{{{__ "accesskey" "s"}}}">{{{__ "save"}}}</button>
  <button type="submit" id="preview" name="team-action" value="preview" class="secondary" accesskey="p" title="{{{__ "preview" "p"}}}">{{{__ "preview"}}}</button>
</div>
</form>
