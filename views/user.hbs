<div id="page-errors">
{{#each pageErrors}}
<div class="error">{{{this}}}</div>
{{/each}}
</div>
<div id="page-messages">
{{#each pageMessages}}
<div class="message-box">{{{this}}}</div>
{{/each}}
</div>
<h1 class="grid-adjacent">{{{__ titleKey titleParam}}}</h1>
<div class="grid grid-with-sidebar">
<div>
<div class="headline-with-link">
<h2>{{{__ "feed"}}}</h2>
{{#if feedItems}}
<span class="view-all-link no-print"><a class="nav-pill" href="/user/{{{userInfo.urlName}}}/feed">{{{__ "view all"}}}</a></span>
{{/if}}
</div>
<p>
{{#if feedItems}}
{{>feed userFeed=true}}
{{else}}
{{{__ "no reviews for user"}}}
{{/if}}
</div>
<div>
<div class="user-info">
<h2>{{{__ "bio heading"}}}</h2>
{{#unless edit.bio}}
{{#if userInfo.meta.bio}}
{{{mlHTML userInfo.meta.bio.html}}}
{{/if}}
{{#if userInfo.userCanEditMetadata}}
<a id="edit-bio" href="/user/{{userInfo.urlName}}/edit/bio" role="button" class="button-compact secondary">
<span class="fa fa-pencil fa-fw spaced-icon"></span> {{#if userInfo.meta.bio}}{{{__ "edit bio"}}}{{else}}{{{__ "add bio"}}}{{/if}}
</a>
{{/if}}
{{else}}
<form id="bio-form" name="bio-form" action="" method="post">
<textarea id="bio-textarea" data-markdown name="bio-text">{{mlSafeText userInfo.meta.bio.text false}}</textarea>
{{>editor_switcher}}
<input type="hidden" value="{{currentLanguage.langKey}}" name="bio-language">
<input type="hidden" value="{{csrfToken}}" name="_csrf">
<div id="character-caption">
{{{__ "max characters"}}}
<span id="character-counter" class="nojs-hidden">{{{__ "remaining characters" "<span id='character-count'></span>"}}}</span>
<span id="over-maximum-warning" class="hidden-regular">{{{__ "over maximum" "<span id='over-maximum-count'></span>"}}}</span>
<br>
{{{__ "supports markdown"}}}
<p>
</div>
<button type="submit" id="save" name="thing-action" value="save" accesskey="s" title="{{{__ "accesskey" "s"}}}">{{{__ "save"}}}</button>
<a href="/user/{{userInfo.urlName}}" class="cancel-link">{{{__ "cancel"}}}</a>
</form>
{{/unless}}
<p>
<span class="user-label">{{{__ "user registration date"}}}</span><br>
<p>{{userInfo.registrationDate}}</p>
<p>
{{#if isOwnPage}}
{{#if userInfo.isSiteModerator}}
{{#if accountRequestsEnabled}}
<span class="user-label">{{{__ "moderation tools"}}}</span><br>
<ul>
<li><a href="/actions/manage-requests">{{{__ "manage account requests"}}}</a></li>
</ul>
<p>
{{/if}}
{{/if}}
{{/if}}
<span class="user-label">{{{__ "user teams"}}}</span><br>

{{! Team list}}
{{#if teams}}
<ul class="user-team-list">
{{#each teams}}
<li> <a href='/team/{{this.id}}'>{{mlSafeText this.name}}</a>
{{#if (lookup ../modOf this.id)}}
<span class="user-team-badge">{{{__ "moderator badge"}}}</span>
{{/if}}
{{#if (lookup ../founderOf this.id)}}
<span class="user-team-badge">{{{__ "founder badge"}}}</span>
{{/if}}
{{/each}}
</ul>
{{else}}
{{{__ "no teams yet"}}}
{{/if}}
{{!End team list}}
</div>
</div>
</div>
