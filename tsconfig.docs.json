{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node", "jquery"]
  },
  "include": [
    "frontend/**/*.ts",
    "frontend/**/*.js",
    "bootstrap/**/*.ts",
    "dal/**/*.ts",
    "util/**/*.ts",
    "types/**/*.d.ts"
  ]
}
