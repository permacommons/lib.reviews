{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "noEmit": false,
    "outDir": "build/server",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "*.js",
    "*.ts",
    "adapters/**/*.js",
    "adapters/**/*.ts",
    "app.ts",
    "auth.ts",
    "bootstrap/**/*.js",
    "bootstrap/**/*.ts",
    "config/**/*.js",
    "config/**/*.ts",
    "dal/**/*.js",
    "dal/**/*.ts",
    "db-postgres.ts",
    "deployment/**/*.js",
    "models/**/*.js",
    "models/**/*.ts",
    "routes/**/*.js",
    "routes/**/*.ts",
    "search.ts",
    "util/**/*.js",
    "util/**/*.ts",
    "bin/**/*.js",
    "bin/**/*.ts",
    "maintenance/**/*.js",
    "maintenance/**/*.ts",
    "tools/**/*.js",
    "tools/**/*.ts",
    "types/**/*.d.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "frontend/**/*",
    "types/frontend/**/*",
    "tests/**/*",
    "build/**/*"
  ]
}