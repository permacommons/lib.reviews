    "@types/elasticsearch": "^5.0.40",
    "@types/jquery": "^3.5.30",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.10.1",
    "@types/passport": "^1.0.16",
    "@types/sprintf-js": "^1.1.4",
    "ava": "^6.4.1",
    "chalk": "^5.6.2",
    "dependency-cruiser": "^17.2.0",
    "jsdom": "^24.0.0",
    "less": "^4.2.0",
    "nock": "^14.0.10",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typedoc": "^0.27.7",
    "typescript": "^5.6.3",
    "vite": "^7.1.11"
  },
  "overrides": {
    "agentkeepalive": "^4.6.0"
  },
  "ava": {
    "files": [
      "tests/[0-9]*-*.js"
    ],
    "concurrency": 16,
    "timeout": "2m"
  }
}
