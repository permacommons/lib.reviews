{
  "name": "lib.reviews",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "start": "NODE_ENV=production node --import tsx/esm bin/www.js",
    "start-dev": "NODE_ENV=development DEBUG=libreviews:* node --import tsx/esm bin/www.js",
    "start-dev-yad": "bash bin/dev-with-tray.sh",
    "test": "NODE_ENV=development NODE_APP_INSTANCE=testing node --import tsx/esm tests/run-ava.js",
    "make-docs": "typedoc --options typedoc.json",
    "typecheck": "npm run typecheck:backend && npm run typecheck:node && npm run typecheck:frontend && npm run typecheck:tests",
    "typecheck:backend": "tsc --noEmit -p tsconfig.backend.json",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:frontend": "tsc --noEmit -p tsconfig.frontend.json",
    "typecheck:tests": "tsc --noEmit -p tsconfig.tests.json"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cldr-localenames-full": "^29.0.0",
    "compression": "^1.8.1",
    "config": "^4.1.1",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "~1.4.7",
    "csrf-sync": "^4.2.1",
    "debug": "^4.4.3",
    "elasticsearch": "^16.7.3",
    "entities": "^1.1.2",
    "es6-promise": "^4.2.8",
    "escape-html": "^1.0.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "express-useragent": "^1.0.15",
    "file-type": "^21.0.0",
    "hbs": "^4.2.0",
    "hbs-utils": "0.0.4",
    "helmet-csp": "^2.10.0",
    "i18n": "^0.15.2",
    "irc-upd": "^0.11.0",
    "is-svg": "^4.4.0",
    "is-uuid": "^1.0.2",
    "jquery": "^3.7.1",
    "jquery-modal": "^0.9.2",
    "jquery-powertip": "^1.3.2",
    "jsonfile": "^2.4.0",
    "linkify-html": "^4.3.2",
    "linkifyjs": "^4.3.2",
    "markdown-it": "^14.1.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-html5-media": "^0.8.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "promise-limit": "^2.7.0",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-dropcursor": "^1.8.2",
    "prosemirror-history": "^1.4.1",
    "prosemirror-inputrules": "^1.5.0",
    "prosemirror-keymap": "^1.2.3",
    "prosemirror-markdown": "^1.13.2",
    "prosemirror-menu": "^1.2.5",
    "prosemirror-schema-list": "^1.5.1",
    "prosemirror-state": "^1.4.3",
    "prosemirror-view": "^1.41.3",
    "purecss": "^3.0.0",
    "serve-favicon": "~2.5.1",
    "serve-index": "^1.9.1",
    "sisyphus.js": "^1.1.3",
    "sprintf-js": "^1.1.3",
    "striptags": "^3.2.0",
    "type-is": "^1.6.18",
